---
interface Props {
  src: string;
  poster?: string;
  username: string;
  views?: string;
  description?: string;
}

const {
  src,
  poster = "",
  username,
  views = "",
  description = "",
} = Astro.props;

import Video from "./video.astro";
---

<div class="box">
  <div class="video-container">
    <Video src={src} />
    <div class="floating-username">
      {username}
    </div>
    <div class="video-overlay" data-video-src={src} data-username={username}></div>
  </div>
  <div class="text">
    {views && <p class="views-highlight">{views} Views</p>}
    {description && <p class="description-regular">{description}</p>}
  </div>
</div>

<!-- Video Popup Modal akan ditambahkan via JavaScript -->

<style>
  .video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
    z-index: 3;
  }
</style>

