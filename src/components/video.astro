---
interface Props {
  src: string;
  className?: string;
  autoplay?: boolean;
}

const { src, className = "portfolio-video", autoplay = false } = Astro.props;
---

<video
  src={src}
  muted
  loop
  poster="/videocover.jpg"
  playsinline
  preload="none"
  class={className}
  {...autoplay ? { autoplay: true } : {}}
>
</video>
