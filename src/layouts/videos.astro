<script>
  import Splide from "@splidejs/splide";
  document.addEventListener("DOMContentLoaded", function () {
    var splide = new Splide("#videosSplide", {
      autoplay: true,
      type: "loop",
      perPage: 4,
      perMove: 1,
      gap: "16px",
      pagination: false,
      breakpoints: {
        1024: {
          perPage: 4,
        },
        768: {
          perPage: 3,
        },
        480: {
          perPage: 1,
        },
      },
    });
    splide.mount();
  });
</script>
