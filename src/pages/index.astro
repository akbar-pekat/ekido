---
import Base from "../layouts/base.astro";
import Hero from "../layouts/hero.astro";
import Videos from "../layouts/videos.astro";
import Service from "../layouts/service.astro";
import Why from "../layouts/why.astro";
import Testimoni from "../layouts/testimoni.astro";
import Faq from "../layouts/faq.astro";
import About from "../layouts/about.astro";
import Footer from "../layouts/footer.astro";
import JsonLd from '../components/JsonLd.astro';

const jsonLdData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Ekido - Your FYP Partner!",
  "url": Astro.site,
  "potentialAction": {
    "@type": "SearchAction",
    "target": `${Astro.site}search?q={search_term_string}`,
    "query-input": "required name=search_term_string"
  }
};
---

<Base>
  <JsonLd data={jsonLdData} />
  <Hero />
  <!-- <Videos /> -->
  <Service />
  <Why />
  <Testimoni />
  <Faq />
  <!-- <About title="Tentang Ekido" /> -->
  <Footer />
</Base>
